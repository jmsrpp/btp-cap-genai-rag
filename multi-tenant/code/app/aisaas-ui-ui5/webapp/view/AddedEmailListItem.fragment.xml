<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    core:require="{ formatter: 'aisaas/ui/model/formatter' }"
>
   <VBox width="100%" justifyContent="SpaceBetween" >
        <Title text="{= ${/translationOn} ? ${mail/translation/subject} : ${mail/subject}}" class="sapUiTinyMarginEnd"/>
        <HBox>
            <Title width="6rem" titleStyle="H6" text="{i18n>email.titles.sender}:" />
            <Text text="{= !${/translationOn} ? ${mail/sender} : ${mail/translation/sender} }" />
        </HBox>
        <HBox>
            <Title width="6rem" titleStyle="H6" text="{i18n>email.titles.summary}:" />
            <Text text="{mail/translation/summary}" />
        </HBox>
    </VBox>
</core:FragmentDefinition>
